<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retail Cloud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* CONSISTENT BLUE THEME FOR BOTH ADMIN AND CUSTOMER */
        :root {
            --primary-color: #1b6ec2;
            --primary-hover: #1861ac;
            --primary-gradient: linear-gradient(135deg, #1b6ec2 0%, #1861ac 100%);
        }

        .btn-primary {
            background: var(--primary-gradient) !important;
            border: none !important;
            color: white !important;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1861ac 0%, #1b6ec2 100%) !important;
                transform: translateY(-2px);
            }

        .navbar-brand {
            font-weight: bold;
            color: var(--primary-color) !important;
        }

        .badge.bg-primary {
            background-color: var(--primary-color) !important;
        }

        /* Card styling */
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            font-weight: 600;
        }

        /* Links */
        a {
            color: var(--primary-color);
        }

            a:hover {
                color: var(--primary-hover);
            }

        /* Table styling */
        .table-hover tbody tr:hover {
            background-color: rgba(27, 110, 194, 0.05);
        }

        /* Success/Warning/Danger colors stay the same */
        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop"></i> ABC Retail Cloud
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Customer"))
                            {
                                <!-- CUSTOMER NAVIGATION -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CustomerArea" asp-action="Dashboard">
                                        <i class="bi bi-house-door"></i> Shop
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CustomerArea" asp-action="Cart">
                                        <i class="bi bi-cart"></i> Cart
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="CustomerArea" asp-action="Orders">
                                        <i class="bi bi-clock-history"></i> My Orders
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                <!-- ADMIN NAVIGATION -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">
                                        <i class="bi bi-people"></i> Customers
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Products
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-receipt"></i> Orders
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                                        <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">All Orders</a></li>
                                        <li><a class="dropdown-item" asp-controller="Order" asp-action="SqlOrders">Customer Orders (SQL)</a></li>
                                        <li><a class="dropdown-item" asp-controller="Order" asp-action="Queue">Order Queue</a></li>
                                        <li><a class="dropdown-item" asp-controller="Order" asp-action="Create">Create Order</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Inventory" asp-action="Index">
                                        <i class="bi bi-boxes"></i> Inventory
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="File" asp-action="Index">
                                        <i class="bi bi-file-earmark"></i> Files
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="HealthCheck" asp-action="Index">
                                        <i class="bi bi-heart-pulse"></i> Health Check
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- PUBLIC NAVIGATION (NOT LOGGED IN) -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door"></i> Home
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT SIDE NAVIGATION -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- USER PROFILE DROPDOWN -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="bi bi-person-badge"></i>
                                            @User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
                                            @User.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value
                                        </h6>
                                    </li>
                                    <li>
                                        <span class="dropdown-item-text small text-muted">
                                            <i class="bi bi-envelope"></i> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <span class="dropdown-item-text small">
                                            <i class="bi bi-shield-check text-primary"></i>
                                            <strong>Role:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <span class="dropdown-item disabled text-muted">
                                            <i class="bi bi-person"></i> Profile (Coming Soon)
                                        </span>
                                    </li>
                                    <li>
                                        <span class="dropdown-item disabled text-muted">
                                            <i class="bi bi-gear"></i> Settings (Coming Soon)
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger" style="cursor: pointer; border: none; background: none; width: 100%; text-align: left;">
                                                <i class="bi bi-box-arrow-right"></i> Sign Out
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- LOGIN/REGISTER LINKS -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ABC Retail Cloud - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
