@*------------Start of file------------*@
@model CLDV6212_POE_st10439398.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Product
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this product? This action cannot be undone.
                    </div>

                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4 mb-3">
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 200px;" />
                            </div>
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-6">Product ID:</dt>
                                    <dd class="col-sm-6"><code>@Model.ProductId</code></dd>

                                    <dt class="col-sm-6">Name:</dt>
                                    <dd class="col-sm-6">@Model.Name</dd>

                                    <dt class="col-sm-6">Price:</dt>
                                    <dd class="col-sm-6">@Model.Price.ToString("C")</dd>

                                    <dt class="col-sm-6">Category:</dt>
                                    <dd class="col-sm-6">@Model.Category</dd>

                                    <dt class="col-sm-6">Stock:</dt>
                                    <dd class="col-sm-6">@Model.StockQuantity</dd>

                                    <dt class="col-sm-6">Created:</dt>
                                    <dd class="col-sm-6">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                                </dl>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12">
                                <dl class="row">
                                    <dt class="col-sm-4">Product ID:</dt>
                                    <dd class="col-sm-8"><code>@Model.ProductId</code></dd>

                                    <dt class="col-sm-4">Name:</dt>
                                    <dd class="col-sm-8">@Model.Name</dd>

                                    <dt class="col-sm-4">Price:</dt>
                                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                                    <dt class="col-sm-4">Category:</dt>
                                    <dd class="col-sm-8">@Model.Category</dd>

                                    <dt class="col-sm-4">Stock Quantity:</dt>
                                    <dd class="col-sm-8">@Model.StockQuantity</dd>

                                    <dt class="col-sm-4">Created Date:</dt>
                                    <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                                </dl>
                            </div>
                        }
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="RowKey" />
                        <input type="hidden" asp-for="PartitionKey" />
                        <input type="hidden" asp-for="ETag" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@*------------End of file------------*@