@model IEnumerable<CLDV6212_POE_st10439398.Models.FileInfoModel>
@{
    string GetFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    string GetTotalSize(long totalBytes)
    {
        return GetFileSize(totalBytes);
    }
}

@{
    ViewData["Title"] = "File Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-folder"></i> File Management</h2>
                <a asp-action="Upload" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Upload File
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Contract Files (@Model.Count() files)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>File Name</th>
                                        <th>Description</th>
                                        <th>Contract Type</th>
                                        <th>Size</th>
                                        <th>Last Modified</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-file"></i>
                                                @file.FileName
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(file.Description))
                                                {
                                                    @file.Description
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No description</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@file.ContractType</span>
                                            </td>
                                            <td>@GetFileSize(file.Size)</td>
                                            <td>@file.LastModified.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-fileName="@file.FileName"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Download" asp-route-fileName="@file.FileName"
                                                       class="btn btn-outline-success" title="Download">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-fileName="@file.FileName"
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- File Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                                <h4>@Model.Count()</h4>
                                <p class="mb-0">Total Files</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-hdd fa-2x text-info mb-2"></i>
                                <h4>@GetTotalSize(Model.Sum(f => f.Size))</h4>
                                <p class="mb-0">Total Size</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-tags fa-2x text-success mb-2"></i>
                                <h4>@Model.GroupBy(f => f.ContractType).Count()</h4>
                                <p class="mb-0">Contract Types</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                <h4>@(Model.Any() ? Model.Max(f => f.LastModified).ToString("MM/dd") : "N/A")</h4>
                                <p class="mb-0">Latest Upload</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    <h4>No Files Found</h4>
                    <p>No contract files have been uploaded yet. Start by uploading your first file.</p>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Upload First File
                    </a>
                </div>
            }
        </div>
    </div>
</div>

