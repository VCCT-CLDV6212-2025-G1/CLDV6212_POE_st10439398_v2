@model CLDV6212_POE_st10439398.Models.FileInfoModel
@{
    string GetFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@{
    ViewData["Title"] = "Delete File";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete File
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this file? This action cannot be undone and the file will be permanently removed from Azure Files storage.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">File Name:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-file"></i> @Model.FileName
                        </dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">No description</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Contract Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.ContractType</span>
                        </dd>

                        <dt class="col-sm-4">File Size:</dt>
                        <dd class="col-sm-8">@GetFileSize(Model.Size)</dd>

                        <dt class="col-sm-4">Last Modified:</dt>
                        <dd class="col-sm-8">@Model.LastModified.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="fileName" value="@Model.FileName" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete File
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@*------------End of file------------*@