@model CLDV6212_POE_st10439398.Models.FileInfoModel
@{
    string GetFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@{
    ViewData["Title"] = "File Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-file-alt"></i> File Details
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">File Name:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-file"></i> @Model.FileName
                        </dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">No description provided</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Contract Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary fs-6">@Model.ContractType</span>
                        </dd>

                        <dt class="col-sm-4">Content Type:</dt>
                        <dd class="col-sm-8">
                            <code>@Model.ContentType</code>
                        </dd>

                        <dt class="col-sm-4">File Size:</dt>
                        <dd class="col-sm-8">@GetFileSize(Model.Size)</dd>

                        <dt class="col-sm-4">Last Modified:</dt>
                        <dd class="col-sm-8">@Model.LastModified.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>

                        <dt class="col-sm-4">Download URL:</dt>
                        <dd class="col-sm-8">
                            <small class="text-muted font-monospace">@Model.DownloadUrl</small>
                        </dd>
                    </dl>

                    <div class="alert alert-light">
                        <i class="fas fa-info-circle text-info"></i>
                        <strong>Storage Information:</strong>
                        This file is securely stored in Azure Files, providing reliable and scalable cloud storage for your contract documents.
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Files
                        </a>
                        <div>
                            <a asp-action="Download" asp-route-fileName="@Model.FileName" class="btn btn-success">
                                <i class="fas fa-download"></i> Download
                            </a>
                            <a asp-action="Delete" asp-route-fileName="@Model.FileName" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*------------End of file------------*@