@model IEnumerable<CLDV6212_POE_st10439398.Models.OrderMessage>

@{
    ViewData["Title"] = "Order Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shopping-cart"></i> Order Management</h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Order
                    </a>
                    <a asp-action="Queue" class="btn btn-info">
                        <i class="fas fa-list"></i> View Queue
                    </a>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Orders in Queue</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td><code>@order.OrderId</code></td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.ProductName</td>
                                            <td>@order.Quantity</td>
                                            <td>R @order.UnitPrice.ToString("N2")</td>
                                            <td><strong>R @order.TotalAmount.ToString("N2")</strong></td>
                                            <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                @if (order.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">@order.Status</span>
                                                }
                                                else if (order.Status == "Processing")
                                                {
                                                    <span class="badge bg-info">@order.Status</span>
                                                }
                                                else if (order.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@order.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@order.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@order.OrderId"
                                                   class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    <h4>No Orders Found</h4>
                    <p>No orders are currently in the queue. Create your first order to get started.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Order
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@*------------End of file------------*@