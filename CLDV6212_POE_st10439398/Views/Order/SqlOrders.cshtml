@model List<CLDV6212_POE_st10439398.Models.Order>
@{
    ViewData["Title"] = "Customer Orders - SQL Database";
}

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast show" role="alert">
            <div class="toast-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["ErrorMessage"]
            </div>
        </div>
    }
</div>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-database"></i> Customer Orders (SQL Database)</h2>
            <p class="text-muted">View and manage orders from customer shopping carts</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to All Orders
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-receipt"></i> All Customer Orders (@Model.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">#@order.OrderId</strong>
                                    </td>
                                    <td>
                                        <i class="bi bi-person"></i> @order.User.FirstName @order.User.LastName
                                    </td>
                                    <td>
                                        <small class="text-muted">@order.User.Email</small>
                                    </td>
                                    <td>
                                        <div>@order.OrderDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@order.OrderDate.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@order.TotalItems items</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@order.TotalAmountFormatted</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-@order.StatusBadgeClass">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (order.Status == "Pending" || order.Status == "Processing")
                                        {
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                                <input type="hidden" name="newStatus" value="PROCESSED" />
                                                <button type="submit" class="btn btn-sm btn-success"
                                                        onclick="return confirm('Mark order #@order.OrderId as PROCESSED?');">
                                                    <i class="bi bi-check-circle"></i> Mark PROCESSED
                                                </button>
                                            </form>
                                        }
                                        else if (order.Status == "PROCESSED" || order.Status == "Completed")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Processed
                                            </span>
                                            @if (order.ProcessedDate.HasValue)
                                            {
                                                <br>
                                                <small class="text-muted">@order.ProcessedDate.Value.ToString("MMM dd")</small>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="row">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-warning">@Model.Count(o => o.Status == "Pending")</h4>
                            <p class="text-muted mb-0">Pending Orders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-info">@Model.Count(o => o.Status == "Processing")</h4>
                            <p class="text-muted mb-0">Processing</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-success">@Model.Count(o => o.Status == "PROCESSED" || o.Status == "Completed")</h4>
                            <p class="text-muted mb-0">Processed</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h4 class="text-primary">R @Model.Sum(o => o.TotalAmount).ToString("N2")</h4>
                            <p class="text-muted mb-0">Total Revenue</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #6c757d;"></i>
                <h4 class="mt-3">No Customer Orders Yet</h4>
                <p class="text-muted">Orders from customer shopping carts will appear here.</p>
                <a asp-controller="CustomerArea" asp-action="Dashboard" class="btn btn-primary">
                    <i class="bi bi-shop"></i> Go to Customer Shopping
                </a>
            </div>
        </div>
    }
</div>

<script>
    // Auto-hide toasts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        var toasts = document.querySelectorAll('.toast');
        toasts.forEach(function(toast) {
            setTimeout(function() {
                toast.classList.remove('show');
                setTimeout(function() {
                    toast.remove();
                }, 300);
            }, 5000);
        });
    });
</script>
