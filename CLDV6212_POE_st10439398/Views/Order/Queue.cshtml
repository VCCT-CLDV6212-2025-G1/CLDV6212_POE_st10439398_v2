@model IEnumerable<CLDV6212_POE_st10439398.Models.OrderMessage>

@{
    ViewData["Title"] = "Order Processing Queue";
}

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast show" role="alert">
            <div class="toast-header bg-danger text-white">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["ErrorMessage"]
            </div>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="toast show" role="alert">
            <div class="toast-header bg-info text-white">
                <i class="fas fa-info-circle me-2"></i>
                <strong class="me-auto">Info</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["InfoMessage"]
            </div>
        </div>
    }
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-list-alt"></i> Order Processing Queue</h2>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Orders
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Order
                    </a>
                </div>
            </div>

            <!-- Queue Statistics -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h3>@ViewBag.QueueLength</h3>
                            <p class="mb-0">Orders in Queue</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h3>@Model.Count()</h3>
                            <p class="mb-0">Visible Orders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-exclamation-circle fa-2x mb-2"></i>
                            <h3>@Model.Count(o => o.Status == "Pending")</h3>
                            <p class="mb-0">Pending Orders</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Queue Actions -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Queue Management</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <form asp-action="ProcessNext" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success btn-lg"
                            @(ViewBag.QueueLength == 0 ? "disabled" : "")>
                                <i class="fas fa-play"></i> Process Next Order
                            </button>
                        </form>
                        <form asp-action="ClearQueue" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to clear all orders from the queue? This action cannot be undone.');">
                            <button type="submit" class="btn btn-danger btn-lg"
                            @(ViewBag.QueueLength == 0 ? "disabled" : "")>
                                <i class="fas fa-trash"></i> Clear Queue
                            </button>
                        </form>
                        <button class="btn btn-info btn-lg" onclick="location.reload();">
                            <i class="fas fa-sync"></i> Refresh Queue
                        </button>
                    </div>
                </div>
            </div>

            <!-- Queue Contents -->
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-list"></i> Orders in Processing Queue</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Order ID</th>
                                        <th>Customer</th>
                                        <th>Product</th>
                                        <th>Qty</th>
                                        <th>Unit Price</th>
                                        <th>Total Amount</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Special Instructions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int position = 1;
                                    }
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (position == 1)
                                                {
                                                    <span class="badge bg-danger fs-6">NEXT</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@position</span>
                                                }
                                            </td>
                                            <td><code>@order.OrderId</code></td>
                                            <td><strong>@order.CustomerName</strong></td>
                                            <td>@order.ProductName</td>
                                            <td class="text-center">@order.Quantity</td>
                                            <td>R @order.UnitPrice.ToString("N2")</td>
                                            <td><strong>R @order.TotalAmount.ToString("N2")</strong></td>
                                            <td>
                                                <small>@order.OrderDate.ToString("MM/dd HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (order.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">@order.Status</span>
                                                }
                                                else if (order.Status == "Processing")
                                                {
                                                    <span class="badge bg-info">@order.Status</span>
                                                }
                                                else if (order.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@order.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@order.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(order.SpecialInstructions))
                                                {
                                                    <span class="badge bg-info" title="@order.SpecialInstructions">
                                                        <i class="fas fa-sticky-note"></i> Note
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                        </tr>
                                        position++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <h4>Queue is Empty</h4>
                    <p class="mb-3">No orders are currently in the processing queue.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Order
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Auto-hide toasts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        var toasts = document.querySelectorAll('.toast');
        toasts.forEach(function(toast) {
            setTimeout(function() {
                toast.classList.remove('show');
                setTimeout(function() {
                    toast.remove();
                }, 300);
            }, 5000);
        });
    });

    // Auto-refresh every 10 seconds when queue is not empty
    @if (ViewBag.QueueLength > 0)
    {
        <text>
        var refreshInterval = setInterval(function(){
            location.reload();
        }, 10000);
        </text>
    }
</script>

@*------------End of file------------*@