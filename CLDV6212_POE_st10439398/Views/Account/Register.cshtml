@model CLDV6212_POE_st10439398.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register - ABC Retail";
}

<style>
    .register-container {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .register-card {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border-radius: 10px;
    }

    .register-header {
        background: linear-gradient(135deg, #1b6ec2 0%, #1861ac 100%);
        color: white;
        padding: 30px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .register-body {
        padding: 40px;
    }

    .form-control:focus {
        border-color: #1b6ec2;
        box-shadow: 0 0 0 0.2rem rgba(27, 110, 194, 0.25);
    }

    .btn-register {
        background: linear-gradient(135deg, #1b6ec2 0%, #1861ac 100%);
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: 600;
        transition: transform 0.2s;
        color: white;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(27, 110, 194, 0.4);
            color: white;
        }
</style>

<div class="container register-container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card register-card">
                <div class="register-header">
                    <h2 class="mb-2">Create Your Account</h2>
                    <p class="mb-0">Join ABC Retail Cloud today</p>
                </div>
                <div class="register-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John" autofocus />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="john.doe@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">This will be your username</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="0123456789" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="123 Main Street" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label fw-bold">City</label>
                            <input asp-for="City" class="form-control" placeholder="Cape Town" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Minimum 6 characters" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-register w-100 mb-3">
                            <i class="bi bi-person-plus"></i> Create Account
                        </button>
                    </form>

                    <hr>

                    <div class="text-center">
                        <p class="mb-0">
                            Already have an account?
                            <a asp-action="Login" class="fw-bold" style="color: #1b6ec2;">Login here</a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-muted">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
